<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/comp_fulldes"
        tools:context=".Complain_section.Complain_Fulldescription">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"

    >
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_margin="10dp"
        >
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Complain Details"
                      android:textColor="#FF000000"
                      android:textSize="20dp"
                      android:gravity="center"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/fulldes_fullname"
                      android:text="username"
                      android:layout_margin="10dp"
            />
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/fulldes_comp_code1"
                      android:text="cc1"
                      android:layout_margin="10dp"
            />
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/fulldes_comp_code2"
                      android:text="cc2"
                      android:layout_margin="10dp"
            />

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_margin="10dp"
                          android:background="@drawable/border_style"
            >

                <ImageView android:layout_width="match_parent"
                           android:id="@+id/fulldes_complain_image"
                           android:layout_height="330dp"
                           android:layout_margin="10dp"


                />

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_margin="10dp"
                          android:background="@drawable/border_style"
            >

                <VideoView android:layout_width="match_parent"
                           android:id="@+id/fulldes_complain_video"
                           android:layout_height="330dp"
                           android:layout_margin="10dp"
                />

            </LinearLayout>



            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/fulldes_zone"
                      android:layout_margin="10dp"
                      android:text="zone"

            />
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/fulldes_ward"
                      android:layout_margin="10dp"
                      android:text="ward"
            />
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/complain_des"
                      android:layout_margin="10dp"
            />

            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:id="@+id/fulldes_btnback"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>