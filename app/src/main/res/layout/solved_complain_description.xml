<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:id="@+id/comp_des_1"
        android:orientation="vertical"
>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_margin="10dp"
                  android:id="@+id/lin2"
                  android:background="@drawable/border_style">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/lin3"
                      android:orientation="horizontal"

                      android:layout_margin="5dp">

            <LinearLayout android:layout_width="142dp"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_margin="5dp"
                          android:id="@+id/lin4">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/feedusername1_cd"
                          android:text="text1"
                          android:textStyle="bold"
                          android:layout_marginTop="5dp"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/complain_cat_1_cd"
                          android:text="text2"
                          android:layout_marginTop="5dp"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/complain_cat_2_cd"
                          android:text="text3"
                          android:layout_marginTop="5dp"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/complain_date_time"
                          android:text="text3"
                          android:layout_marginTop="5dp"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/acceptstatus"

                          android:textColor="#008000"
                          android:layout_marginTop="5dp"/>

            </LinearLayout>

            <ImageButton android:layout_width="100dp"
                         android:layout_height="100dp"
                         android:layout_marginLeft="70dp"
                         android:layout_marginBottom="5dp"
                         android:layout_marginTop="10dp"
                         android:id="@+id/imgg1_cd"
                         android:background="@drawable/map1"/>

        </LinearLayout>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/txtacceptingtime"
                  android:text=""

                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginTop="2dp"
                  android:layout_marginBottom="5dp"
        />

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="10dp"
                      android:id="@+id/lin5">
            <Button
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:id="@+id/empdetail"
                    android:text="Emp details"
                    android:background="@drawable/border_style"
                    android:layout_width="match_parent"/>


            <Button
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp" android:layout_weight="1"
                    android:id="@+id/get_detail"
                    android:text="Get details"
                    android:background="@drawable/border_style"
                    android:layout_width="match_parent"/>

            <Button
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:id="@+id/btnreopnen"
                    android:text="Re-Open complain"
                    android:textSize="12dp"
                    android:background="@drawable/border_style"
                    android:layout_width="match_parent"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>